<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApplication"
    Shell.BackgroundColor="#2B0B98"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Shell.FlyoutBehavior="Flyout"
    Title="WeatherApplication">

    <ShellContent
        Title="Weer"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Aardbevingen"
        ContentTemplate="{DataTemplate local:AardbevingenPage}"
        Route="AardbevingenPage" />

</Shell>
